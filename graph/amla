#define AMLA_vranken_pm
[advancement]
 	id=pm 
	max_times=2 
	description=
	image="boots_elven.png"
	always_display= true
	[effect]
		apply_to=
		name=
	[/effect]
	{STANDARD_AMLA_HEAL 10%}
[/advancement]
#enddef 
 
